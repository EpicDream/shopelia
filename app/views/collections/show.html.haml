%article#collectionArticle
  .topHome
    .spacer25
    .container
      .row
        .collection-title
          //= @collection.name
      .spacer25
      - if @collection.belongs_to?(@current_user)
        .row
          .col-xs-8.col-lg-10
            %input#catalogue-algolia.form-control.input-lg{placeholder: "#{t('app.collections.search_catalogue')}", spellcheck: "false", type: "text"}
        .row
          .col-xs-8.col-lg-10
            %h3#tags_merchant
        .row
          .col-xs-8.col-lg-10
            %h3#tags_category
        .spacer20
        #catalogue
          .row
            - 40.times do |i|
              .col-xs-6.col-md-3.col-lg-3
                .catalogue-box.display-none{id: "catalogue-box-#{i}"}
                  .catalogue-product
                    %img.catalogue-img{id: "catalogue-box-img-#{i}"}
                  .catalogue-price{id: "catalogue-box-price-#{i}"}
                  .catalogue-name{id: "catalogue-box-name-#{i}"}
      .row#collection
        = render @collection.items
    .spacer200