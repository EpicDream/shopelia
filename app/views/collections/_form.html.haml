= form_for @collection, html:{class:'form',id:'collection-form'} do |f|
  .row
    .form-group.col-lg-6
      = f.label :name, class:"sr-only control-label"
      = f.text_field :name, class:"form-control input-lg", type:"text", placeholder:"#{t('placeholders.collections.name')}"
  .row
    .form-group.col-lg-6
      = f.file_field :image, class:"form-control btn btn-info btn-lg"
  .row
    .col-lg-2
      = f.submit t("app.collections.save"), class:"btn btn-success btn-lg"