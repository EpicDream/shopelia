.row.well.fade-area{:id => "address-#{address.id}"}
  .span10
    %address
      %strong
        = "#{address.first_name} #{address.last_name}"
        %br
      = address.address1
      %br
      - if address.address2.present?
        = address.address2
        %br
      = "#{address.zip} #{address.city}"
      %br
      = address.country.name
      %br
      = address.phone
      %br
  .span2
    %a{:class => "btn ", :style => "display:none", :id => "deleteAddressButton-#{address.id}", "target-modal" => "deleteAddressModal"}
      %i{:class => "icon-trash"}

