<div class="flink-menu" data-category="<%= params[:category] %>">
  <div class="flink-menu-logo">
    <%= link_to image_tag("flink/common/logo_pink.png", :alt => "Flink"), flink_explore_path %>
  </div>
  <div class="flink-menu-categories">
    <%= link_to '/explore/flinkloves' do %>
    <div class="flink-menu-category-loves<%= '-selected' if @category == :flink_loves %>"><%= t('flink.flink_loves') %></div>
    <% end %>
    <%= link_to '/explore/popular' do %>
      <div class="flink-menu-category-popular<%= '-selected' if @category == :popular %>"><%= t('flink.popular') %></div>
    <% end %>
    <%= link_to '/explore/recent' do %>
      <div class="flink-menu-category-recent<%= '-selected' if @category == :recent %>"><%= t('flink.recent') %></div>
    <% end %>
  </div>
  <div class="flink-menu-links">
    <ul>
      <li><%= link_to t('flink.contact'), contact_path %></li>
      <li><%= link_to t('flink.terms'), terms_path %></li>
    </ul>
    <%= link_to image_tag("flink/common/appstore_badge.png", :alt => "Flink"), flink_appstore_url, target: '_blank' %>
  </div>
  <div class="clear"></div>
</div>