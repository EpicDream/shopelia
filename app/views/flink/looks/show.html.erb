<%= content_for :head do %>
  <meta name="keywords" content="<%=flinkwebsite_common_keywords.join(',')%>, <%= @look.hashtags.map(&:name).uniq.join(",") %>">
<% end %>
<%= content_for :title do %>
  <%= "#{@look.flinker.name} - #{@look.name}"%>
<% end %>

<%= render 'flink/menu'%>
<%= render 'flink/facebook_sdk' %>
<div class="detail-container">
  <div class="centered-container">
    <div class="detail-column">
      <div class="look-container" style="background-image: url(<%= @look.large_cover_url %>);"></div>
    </div>
    <div class="detail-column">
      <div class="look-title"><%= @look.name %></div>
      <div class="look-publisher"><%= link_to @look.flinker.name, @look.flinker.trackable_url, :target => "_blank" %></div>
      <div class="look-publication-date"><%= l(@look.published_at.to_date, format: :short) %></div>
      <% if @look.highlighted_hashtags.count > 0 %>
      <div class="look-hashtags">
        <% for hashtag in @look.highlighted_hashtags %>
        <div class="hashtag">#<%= hashtag.name %></div>
        <% end %>
      </div>
      <% end %>
      <% if @look.look_products.count > 0 %>
        <div class="look-products">
          <div class="separator"></div>
          <div class="section-title">Product list</div>
          <div class="look-products-container">
            <% for product in @look.look_products %>
              <div class="look-product">
                <div class="look-product-name">
                  <%= [:en, :fr].map { |locale| t("flink.products.#{product.code}", :locale => locale) }.join("/") %>
                </div>
                <div class="look-product-brand"><%= product.brand %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="stick-to-bottom-container">
        <div class="look-social">
          <div class="section-title float-left"><%= t('flink.share_this_look')%></div>
          <div class="look-social-items float-right">
            <ul>
              <li><%= link_to icon('facebook fa-2x'), '#', onclick: "FB.ui({method: 'share', href: '#{ URI::encode(@look.sharable_url) }' }, function(response){});" %></li>
              <li><%= link_to icon('twitter fa-2x'), "https://twitter.com/share?url=#{ URI::encode(@look.bitly_url) }&text=#{ URI::encode(@look.sharable_title) }", target: '_blank' %></li>
            </ul>
          </div>
          <div class="clear"></div>
        </div>
        <div class="separator"></div>
        <div class="look-buttons">
          <%= link_to @look.trackable_url, {target: "_blank"} do %>
            <div class="rounded-button-grey-tiny">See original article</div>
          <% end %>
          <%= link_to @look.app_deeplink_url, {target: "_blank"} do %>
            <div class="rounded-button-pink-tiny">View on flink app</div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
<div class="suggestions-container">
  <div class="centered-container">
    <div class="suggestions-column">
      <div class="section-title"><%= t('flink.more_from_this_blogger')%></div>
      <% for look in Look.random(4, @look.flinker, @look) %>
        <%= link_to flink_looks_path(look.friendly_id) do %>
          <div class="suggestions-look" style="background-image: url(<%= look.cover_url %>);"></div>
        <% end %>
      <% end %>
    </div>
    <div class="suggestions-column">
      <div class="section-title"><%= t('flink.also_hot_on_flink')%></div>
      <% for look in Look.random(4, nil, @look) %>
        <%= link_to flink_looks_path(look.friendly_id) do %>
          <div class="suggestions-look" style="background-image: url(<%= look.cover_url %>);"></div>
        <% end %>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
</div>