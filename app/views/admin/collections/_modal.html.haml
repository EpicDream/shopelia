#catalogue-add-urls-modal.modal.fade.hidden
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", type: "button"} ?
        %h4.modal-title Add products by url
      .modal-body
        = form_tag admin_collection_items_path, id:"catalogue-add-urls-forms", remote:true do
          %p Enter URLs of products to add (one URL per line)
          = text_area_tag "urls", "", rows:"10", cols:"80", style:"width:95%", id:"catalogue-add-urls-field"
          = hidden_field_tag "collection_id", collection.id
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
        %button.btn.btn-primary#catalogue-add-urls-confirm{type: "button", "data-loading-text" => "Processing..."} Add products


