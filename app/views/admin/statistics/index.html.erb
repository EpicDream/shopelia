          <% look = Look.find(like.look_id) %>
          <td><%= link_to look.flinker.username, admin_flinker_path(look.flinker) %></td>
          <td><%= link_to look.url, look.url %></td>
          <td><%= like.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>

