$("<%= escape_javascript(render @message) %>").appendTo("#messages");
$(".chat-history").animate({scrollTop: $("#messages").height()}, 200);
<% if @message.from_admin? %>
  $('#message_form')[0].reset();
  $("#collection-link").remove();
  $("#message_collection_uuid").attr("value", "");

  $('#gift-card-button').removeClass("button-flat-empty-inverse-success");
  $("#message_gift_card").val(0);
<% end %>