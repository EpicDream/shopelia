%section.header
  %header
    %h1 Conversation
%section.chat
  #messages
    = render partial: "admin/georges/messages/message", collection: @messages
  =render partial: "admin/georges/messages/form"
  = form_for [:admin,:georges,@device] do |f|
    = f.hidden_field :pending_answer, :value => false
    = f.submit "End Conversation", :class => "btn btn-danger btn-large"

