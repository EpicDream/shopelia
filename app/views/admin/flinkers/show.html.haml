%section.header
  %header
    %h1 Flinker #{@flinker.name}
    %h2 
      = @flinker.url

.container-fluid
  .row-fluid
    - @stats.each do |stat|
      = render "widgets/number_box", stat:stat
  .row-fluid
    .span3
      %article.coolbox
        %h3 Details
        = render "form"
    .span9
      %article.coolbox
        %h3 Looks
        - @flinker.looks.where(is_published:true).order("created_at desc").each do |look|
          .img-block
            %div.actions
              %span.bitly-link=look.bitly_url
              %select.theme-select{id:"assign-to-theme", "data-look-id" => look.id}
                =options_for_select(themes_for_select)
            = link_to image_tag(look.look_images.first.picture.url(:large), class:"thumb"), admin_look_path(look)
              
