<div class="staff-hashtags-popup fade modal hidden">
  <div class="staff-hashtags-block">
    <h5>Hashtags visibles</h5>
    <% StaffHashtag.visible.each do |hashtag| %>
      <span class="staff-hashtag" data-checked="0">#<%= hashtag.name_en %></span>
    <% end %>
  </div>

  <div class="staff-hashtags-block">
    <h5>Hashtags invisibles</h5>
    <% StaffHashtag.grouped_by_category.each do |category, hashtags| %>
      <p class="staff-hashtags-category"><%= category %></p>
      <% hashtags.each do |hashtag| %>
        <span class="staff-hashtag" data-checked="0">#<%= hashtag.name_en %></span>
      <% end %>
    <% end %>
  </div>
  
</div>
