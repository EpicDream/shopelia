<table class="flinkers">
  <thead>
    <th>Flinker</th>
    <th>Nombre de looks dans cette collections</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @theme.flinkers.includes(:looks).each do |flinker| %>
      <tr>
        <td><%= link_to flinker.username, admin_flinker_path(flinker) %></td>
        <td><%= @theme.looks_of_flinker(flinker).count %></td>
        <td><%= link_to 'remove', admin_theme_flinker_path(@theme, flinker.id), id:'remove-flinker' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
