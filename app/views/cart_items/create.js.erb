<% if @item.errors.any? %>
  $("#cart_item_url").data("content", "<%= raw @item.errors.full_messages.first %>")
  $("#cart_item_url").popover('show');
  $("#cart_item_url").focus();
  $("#cart_item_url").on('input', function() {
    $(this).popover('hide')
  });
<% else %>
  $("#cart").html("<%= escape_javascript(render @current_cart) %>")
  showSpinners();
<% end %>