<% if @item.errors.any? %>
  @item.product.authorize_push_channel
  $("#collection_item_url").data("content", "<%= raw @item.errors.full_messages.first %>")
  $("#collection_item_url").popover('show');
  $("#collection_item_url").focus();
  $("#collection_item_url").on('input', function() {
    $(this).popover('hide')
  });
<% else %>
  $("#collection").html("<%= escape_javascript(render @item.collection.collection_items) %>")
  showSpinners();
  monitorCollectionItems();
<% end %>