= form_for resource, as:resource_name, remote: true, url:registration_path(resource_name), html:{class:'form form-horizontal',id:'signup-form'} do |f|
  .form-group.display-none#signup-error-box
    .col-lg-offset-4.col-lg-6.alert.alert-danger#signup-error-text
  .form-group
    = f.label :first_name, class:"col-lg-4 control-label"
    .col-lg-6
      = f.text_field :first_name, class:"form-control input-lg", type:"text", placeholder:"#{t('placeholders.user.first_name')}"
  .form-group
    = f.label :last_name, class:"col-lg-4 control-label"
    .col-lg-6
      = f.text_field :last_name, class:"form-control input-lg", type:"text", placeholder:"#{t('placeholders.user.last_name')}"
  .form-group
    = f.label :email, class:"col-lg-4 control-label"
    .col-lg-6
      = f.text_field :email, class:"form-control input-lg", type:"email", placeholder:"#{t('placeholders.user.email')}"
  .form-group
    = f.label :password, class:"col-lg-4 control-label"
    .col-lg-6
      = f.text_field :password, class:"form-control input-lg", type:"password", placeholder:"#{t('placeholders.user.password')}"
  .form-group
    .col-lg-offset-4.col-lg-6
      = f.submit t("app.signup.submit"), class:"btn btn-success btn-lg", disable_with:t("app.wait")