= form_for resource, as:resource_name, remote: true, url:session_path(resource_name), html:{class:'form form-horizontal',id:'signin-form'} do |f|
  .form-group.display-none#signin-error-box
    .col-lg-10.alert.alert-danger#signin-error-text
  .form-group
    = f.label :email, class:"col-lg-4 control-label"
    .col-lg-6
      = f.text_field :email, class:"form-control input-lg", type:"email", placeholder:"#{t('placeholders.user.email')}"
  .form-group
    = f.label :password, class:"col-lg-4 control-label"
    .col-lg-6
      = f.text_field :password, class:"form-control input-lg", type:"password", placeholder:"#{t('placeholders.user.password')}"
  .form-group
    .col-lg-offset-4.col-lg-6
      = f.submit t("app.signin.submit"), class:"btn btn-success btn-lg", disable_with:t("app.wait")
  .form-group
    .col-lg-offset-4.col-lg-6
      = link_to t("app.forgot_your_password"), new_password_path(resource_name)