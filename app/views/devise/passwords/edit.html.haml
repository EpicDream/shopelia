%h2= t('.change_your_password', :default => 'Change your password')

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.error_notification

  = f.input :reset_password_token, :as => :hidden
  = f.full_error :reset_password_token

  .form-inputs
    = f.input :password, :label => false, :required => true, :autofocus => true, :placeholder => t('.new_password', :default => 'New password')
    = f.input :password_confirmation, :label => false, :required => true, :placeholder => t('.confirm_new_password', :default => 'Confirm new password')
    = f.button :submit, t('.change_my_password', :default => 'Change my password')

= render "devise/shared/links"
