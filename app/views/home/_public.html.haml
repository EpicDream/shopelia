%article#homeArticle
  .topHome
    .spacer-header
    .container
      .row
        .col-md-6.center
          .promise
            = t 'app.public.promise'
            %h4= t 'app.public.tagline'
              
          .spacer40
          .btn.btn-default.btn-lg.btn-download{rel:"tooltip"}
            = t 'app.public.download_app'
          .row
            .col-md-4.col-md-offset-2
              .spacer40
              = image_tag("appstore-icon.png")
            .col-md-4
              .spacer40
              = image_tag("googleplay-icon.png")
            .spacer40
        .col-md-6
          .iphone-screen
            = image_tag("ios-screen.png", :class => "demo-screen")

  .spacer100
  %section
    .container
      .row
        .col-md-3.center= image_tag("simple-icon.png", width:"200px")
        .col-md-8.col-md-offset-1
          %h1.red= t 'app.public.simple.title'
          %p= t 'app.public.simple.text'
            
  .spacer50
  %section
    .container
      .row
        .col-md-3.center.col-md-push-8.col-md-offset-1= image_tag("convenient-icon.png", width:"200px")
        .col-md-8.col-md-pull-3
          %h1.green= t 'app.public.practical.title'
          %p= t 'app.public.practical.text'

  .spacer50
  %section
    .container
      .row
        .col-md-3.center= image_tag("security-icon.png", width:"200px")
        .col-md-8.col-md-offset-1
          %h1.blue= t 'app.public.secure.title'
          %p
            = t 'app.public.secure.text'
            = link_to("En savoir plus","/security")

  .spacer100

  %section#download
    .spacer40
    .container
      .row
        .col-md-6.col-md-offset-3
          .well#well_download
            .btn.btn-primary.btn-lg.btn-block.btn-download{rel:"tooltip"}
              = t 'app.public.download_app'

    .spacer50