- content_for :head do
  %meta{content: @look.description, name: "description"}/
  %meta{content: "735090113186174", property: "fb:app_id"}/
  %meta{content: @look.flinker.name, property: "og:title"}/
  %meta{content: "Flink, a beautiful app to discover and share trendy fashion looks from top bloggers.", property: "og:description"}/
  %meta{content: "http://www.flink.io/looks/" + @look.uuid, property: "og:url"}/
  %meta{content: "http://www.flink.io" + @look.look_images.order(:display_order).first.picture.url(:large), property: "og:image"}/
  %meta{content: "photo", name: "twitter:card"}/
  %meta{content: "@FlinkHQ", name: "twitter:site"}/
  %meta{content: "flink.io", name: "twitter:domain"}/
  %meta{content: @look.name, name: "twitter:title"}/
  %meta{content: "http://www.flink.io" + @look.look_images.order(:display_order).first.picture.url(:large) , name: "twitter:image:src"}/

#background
#pane
  #cover
  #content
    #header
      - unless @avatar.nil?  || @avatar.avatar_url.nil?
        = image_tag(@look.flinker.avatar.url, size:"75x75", class:"flinker-avatar")
      %h3= @look.flinker.name
      %h5= @look.name

    #center
      #share-buttons
        .fb-like{"data-action" => "like", "data-href" => "http://www.flink.io/looks/" + @look.uuid, "data-layout" => "button_count", "data-share" => "false", "data-show-faces" => "false"}
        %iframe.twttr-like{allowtransparency: "true", frameborder: "0", scrolling: "no", src: "https://platform.twitter.com/widgets/tweet_button.html", style: "width:80px; height:20px;"}
    #footer
      %h5
        Download Flink on your iPhone
        %br
          and follow #{@look.flinker.name} to get more looks.
      = image_tag('flink/appstore.png')

:javascript
  $(document).ready(function(){
    var background = $('#background');
     background.css({
     "background": "url(#{@look.look_images.order(:display_order).first.picture.url(:small)}) center center fixed",
     "background-size": "100% auto",
     "-webkit-filter":  "blur(40px)",
     "filter": "url(#blur)",
     });

     $("#pane #cover").css({
        "background": "url(#{@look.look_images.order(:display_order).first.picture.url(:large)}) no-repeat center center",
        "background-size": "auto 600px"

     })

  });

