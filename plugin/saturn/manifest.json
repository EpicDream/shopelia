{
  "name": "Saturn",
  "version": "1.0.4",
  "manifest_version": 2,

  "description": "Extrateur de donn√©e produit.",
  "icons": {
    "48": "img/saturn48.png",
    "128": "img/saturn128.png"
  },

  "browser_action": {
    "default_title": "Active Saturn",
    "default_icon": "img/saturn48.png"
  },

  "background": {
    "scripts": [
      "lib/utils.js",
      "lib/jquery-1.9.1.min.js",
      "lib/uri.js",
      "src/tree.js",
      "src/saturn_options.js",
      "src/saturn_session.js",
      "src/saturn.js",
      "chrome/chrome_saturn.js"
    ]
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "lib/utils.js",
      "lib/underscore-min.js",
      "lib/jquery-1.9.1.min.js",
      "lib/html_utils.js",
      "src/crawler.js",
      "chrome/chrome_crawler.js"
    ]
  }],

  "permissions": ["tabs", "cookies", "*://*/*"]
}
