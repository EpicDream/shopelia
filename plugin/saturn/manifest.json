{
  "name": "Saturn",
  "version": "0.6.3",
  "manifest_version": 2,

  "description": "Extrateur de donn√©e produit.",
  "icons": {
    "48": "img/saturn48.png",
    "128": "img/saturn128.png"
  },
  // "default_locale": "fr",

  "browser_action": {
    "default_title": "Active Saturn",
    "default_icon": "img/saturn48.png"
  },

  "background": {
    "scripts": [
      "lib/jquery-1.9.1.min.js",
      "lib/uri.js",
      "controllers/background.js"
    ]
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [
      "lib/underscore-min.js",
      "lib/jquery-1.9.1.min.js",
      "lib/html_utils.js",
      "controllers/contentscript.js"
    ]
  }],

  "permissions": ["tabs", "cookies", "*://*/*"]
}
