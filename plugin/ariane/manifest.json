{
  "name": "Ariane",
  "version": "0.4.0",
  "manifest_version": 2,

  "description": "Outil de mapping de page produit pour Viking/Saturn.",
  "icons": {
    "48": "img/rocket48.png",
    "128": "img/rocket128.png"
  },
  // "default_locale": "fr",

  "browser_action": {
    "default_title": "Active Ariane",
    "default_icon": "img/rocket48.png"
  },

  "background": {
    "scripts": ["lib/uri.js", "lib/jquery-1.9.1.min.js", "controllers/background.js"]
  },

  "commands": {
    "next-step": {
      "suggested_key": {"default": "Alt+N"},
      "description": "Go to next step"
    }
  },

  "content_scripts": [
    {
      "matches" : ["*://*/*"],
      "js": ["lib/underscore-min.js", "lib/jquery-1.9.1.min.js", "lib/jquery-ui-1.10.3.custom.min.js", "lib/css_struct.js", "lib/html_utils.js", "lib/path_utils.js"]
    },{
      "matches" : ["*://*/*"],
      "js": ["controllers/toolbar_contentscript.js", "controllers/mapping_contentscript.js"]
    }
  ],

  "web_accessible_resources": [
    "views/toolbar.html",
    "assets/smoothness/*"
  ],
  "permissions": ["tabs", "contextMenus", "*://*/*"]
}
