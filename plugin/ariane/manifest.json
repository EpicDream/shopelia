{
  "name": "Ariane",
  "version": "0.6.0",
  "manifest_version": 2,

  "description": "Outil de mapping de page produit pour Viking/Saturn.",
  "icons": {
    "48": "img/rocket48.png",
    "128": "img/rocket128.png"
  },
  // "default_locale": "fr",

  "browser_action": {
    "default_title": "Active Ariane",
    "default_icon": "img/rocket48.png"
  },

  "background": {
    "scripts": ["build/require.js", "build/uri.js", "build/sprintf.js", "build/jquery.min.js", "build/logger.js", "build/viking.js", "src/ariane.js", "src/back_chrome_listeners.js"],
    "persistent": false
  },

  "commands": {
    "next-step": {
      "suggested_key": {"default": "Alt+N"},
      "description": "Go to next step"
    }
  },

  "content_scripts": [
    {
      "matches" : ["*://*/*"],
      "js": [
        "build/require.js",
        "build/underscore.min.js",
        "build/jquery.min.js", 
        "build/jquery-ui.min.js",
        "build/uri.js",
        "build/sprintf.js",
        "build/logger.js",
        "build/viking.js",
        "build/html_utils.js",
        "lib/css_struct.js",
        "lib/path_utils.js",
        "controllers/toolbar_contentscript.js",
        "controllers/mapping_contentscript.js"
      ]
    },{
      "matches" : ["https://*.shopelia.fr/admin/viking", "https://*.shopelia.com/admin/viking"],
      "js": ["src/loader_cs.js"]
    }
  ],

  "web_accessible_resources": [
    "views/toolbar.html",
    "assets/*"
  ],
  "permissions": ["tabs", "storage", "*://*/*"]
}
